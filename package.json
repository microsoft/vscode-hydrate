{
	"name": "vscode-hydrate",
	"displayName": "VSCode Hydrate",
	"description": "Hydrate for VSCode Kubernetes Tools",
	"license": "MIT",
	"publisher": "madelineliao",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/vscode-hydrate.git"
	},
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
        "bedrock",
        "fabrikate",
		"hydrate",
		"kubernetes",
		"k8s"
	],
	"icon": "icon.png",
	"preview": true,
	"activationEvents": [
		"onView:extension.vsKubernetesExplorer",
		"onCommand:vshydrate.hydrateCluster"
	],
	"extensionDependencies": [
		"ms-kubernetes-tools.vscode-kubernetes-tools"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vshydrate.hydrateCluster",
				"title": "Hydrate Cluster"
			}
		],
		"menus": {
			"view/item/context": [
                {
                    "command": "vshydrate.hydrateCluster",
                    "when": "view == extension.vsKubernetesExplorer && viewItem =~ /vsKubernetes\\.\\w*cluster/i",
                    "group": "hydrate"
                }
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && npm run copy-assets",
		"compile": "tsc -p ./",
		"copy-assets": "cp -r ./assets ./out",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.4",
		"@types/shelljs": "^0.8.5",
		"tslint": "^5.16.0",
		"typescript": "^3.4.3",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/json2md": "^1.5.0",
		"@types/tmp": "^0.1.0",
		"deep-object-diff": "^1.1.0",
		"json2md": "^1.6.3",
		"shelljs": "^0.8.3",
		"tmp": "^0.1.0",
		"vscode-kubernetes-tools-api": "^1.0.0"
	}
}
